---
interface Props {
  title: string;
  description: string;
  href: string;
  icon: string;
  iconMap: Record<string, string>;
}

const { title, description, href, icon, iconMap } = Astro.props;
---

<a href={href} class="group bg-gray-800/80 hover:bg-gray-700/80 border border-gray-700 hover:border-yellow-400/50 rounded-xl p-6 transition-all duration-300 hover:shadow-lg hover:shadow-yellow-500/10 flex flex-col h-full">
  <div class="flex items-center gap-4 mb-4">
    <div class="bg-yellow-500/10 p-3 rounded-lg text-yellow-400 flex items-center justify-center">
      <span class="w-6 h-6">
        <Fragment set:html={iconMap[icon]} />
      </span>
    </div>
    <h3 class="text-xl font-bold text-white group-hover:text-yellow-400 transition-colors">{title}</h3>
  </div>
  <p class="text-gray-300 text-sm">{description}</p>
  <div class="mt-auto pt-4 flex items-center text-yellow-400 text-sm font-medium">
    <span>Leer m√°s</span>
    <span class="w-4 h-4 ml-1 transition-transform group-hover:translate-x-1">
      <Fragment set:html={iconMap.arrowRight} />
    </span>
  </div>
</a>