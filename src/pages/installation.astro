---
import MainLayout from '../layouts/Layout.astro';
import "../styles/global.css";

// Índice de contenido para la página
const tableOfContents = [
  { id: "requisitos", title: "Requisitos previos", depth: 1 },
  { id: "instalacion-rapida", title: "Instalación rápida", depth: 1 },
  { id: "pasos-basicos", title: "Pasos básicos", depth: 1 },
  { id: "paso-1", title: "Descargar el plugin", depth: 2 },
  { id: "paso-2", title: "Colocar en carpeta plugins", depth: 2 },
  { id: "paso-3", title: "Reiniciar el servidor", depth: 2 },
  { id: "dependencias", title: "Dependencias requeridas", depth: 1 },
  { id: "vault", title: "Instalación de Vault", depth: 2 },
  { id: "configuracion-inicial", title: "Configuración inicial", depth: 1 },
  { id: "verificacion", title: "Verificación de instalación", depth: 1 },
  { id: "solucion-problemas", title: "Solución de problemas", depth: 1 },
];

// Enlaces rápidos para navegación entre secciones
const quickLinks = [
  { path: "/installation", label: "Instalación", active: true },
  { path: "/configuration", label: "Configuración" },
  { path: "/usage", label: "Uso" },
  { path: "/pets", label: "Mascotas" },
];

// Enlaces relacionados para esta sección específica
const relatedLinks = [

  { path: "/requirements", label: "texto1234" }, //No hay
];

// Breadcrumbs para navegación
const breadcrumbs = [
  { path: "/", label: "Inicio" },
  { path: "/installation", label: "Instalación", active: true },
];

const configrapifa = [
  {latestversion: "v2.5.1", date: "15 abril 2025"},
  {updated: "15 abril 2025", date: "15 abril 2025"}


]
---

<MainLayout title="Instalación">

  <div class=" dark:bg-gray-800/40 py-2 px-4 mb-8 rounded-lg">
    <div class="container max-w-6xl mx-auto">
      <nav class="flex text-sm">
        {breadcrumbs.map((crumb, index) => (
          <>
            <a 
              href={crumb.path} 
              class:list={[
                "hover:text-yellow-600 dark:hover:text-yellow-400 transition-colors", 
                crumb.active ? "text-yellow-600 dark:text-yellow-400 font-medium" : "text-gray-600 dark:text-gray-400"
              ]}
            >
              {crumb.label}
            </a>
            {index < breadcrumbs.length - 1 && (
              <span class="mx-2 text-gray-500 dark:text-gray-500">/</span>
            )}
          </>
        ))}
      </nav>
    </div>
  </div>

  <div class="container max-w-6xl mx-auto px-4">
    
    <!-- Navegación rápida entre secciones principales -->
    <div class="mb-8 bg-gray-800 shadow-md rounded-xl overflow-hidden border border-gray-200 dark:border-gray-700">
      <div class="bg-gray-900 dark:bg-gray-750 px-6 py-4 border-b border-gray-200 dark:border-gray-700">
        <h2 class="text-lg font-medium text-gray-800 dark:text-gray-200">Documentación EcoPets</h2>
      </div>
      <div class="flex flex-wrap gap-1 p-1">
        {quickLinks.map(link => (
          <a 
            href={link.path}
            class:list={[
              "px-4 py-2 rounded-lg text-sm font-medium transition-all duration-200",
              link.active 
                ? "bg-yellow-100 dark:bg-yellow-900/30 text-yellow-800 dark:text-yellow-300 border-yellow-200 dark:border-yellow-800"
                : "hover:bg-gray-100 dark:hover:bg-gray-700/50 text-gray-700 dark:text-gray-300"
            ]}
          >
            {link.label}
          </a>
        ))}
      </div>
    </div>

    <div class="flex flex-col md:flex-row gap-8">
      <!-- Barra lateral con índice y enlaces -->
      <aside class="md:w-64 lg:w-72 flex-shrink-0 order-2 md:order-1">
        <!-- Tabla de contenidos -->
        <div class="sticky top-20 space-y-6">
          <div class= "bg-gray-800 shadow-md rounded-xl overflow-hidden border border-gray-200 dark:border-gray-700">
            <div class="bg-gray-900 px-4 py-3 border-b border-gray-200 dark:border-gray-700">
              <h3 class="font-medium text-gray-800 dark:text-gray-200 flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" />
                </svg>
                Contenido de esta página
              </h3>
            </div>
            <nav class="p-2">
              <ul class="space-y-1 text-sm">
                {tableOfContents.map((item) => (
                  <li>
                    <a 
                      href={`#${item.id}`}
                      class:list={[
                        "block py-1.5 px-3 rounded-md hover:bg-gray-100 dark:hover:bg-gray-700/50 transition-colors",
                        "text-gray-700 dark:text-gray-300 hover:text-yellow-600 dark:hover:text-yellow-400",
                        item.depth > 1 ? `ml-${(item.depth-1)*3}` : ""
                      ]}
                    >
                      {item.title}
                    </a>
                  </li>
                ))}
              </ul>
            </nav>
          </div>

          <!-- Enlaces relacionados -->
          <div class="bg-gray-800 shadow-md rounded-xl overflow-hidden border border-gray-200 dark:border-gray-700">
            <div class="bg-gray-900 bg-gray-750 px-4 py-3 border-b border-gray-200 dark:border-gray-700">
              <h3 class="font-medium text-gray-800 dark:text-gray-200 flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
                </svg>
                Enlaces relacionados
              </h3>
            </div>
            <nav class="p-2">
              <ul class="space-y-1 text-sm">
                {relatedLinks.map((link) => (
                  <li>
                    <a 
                      href={link.path}
                      class="block py-1.5 px-3 rounded-md text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700/50 hover:text-yellow-600 dark:hover:text-yellow-400 transition-colors"
                    >
                      {link.label}
                    </a>
                  </li>
                ))}
              </ul>
            </nav>
          </div>
          
          <!-- Bloque de ayuda -->
          <div class="bg-blue-50 dark:bg-blue-900/20 rounded-xl border border-blue-200 dark:border-blue-800 p-4">
            <h4 class="font-medium text-blue-800 dark:text-blue-300 flex items-center gap-2 mb-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              ¿Necesitas ayuda?
            </h4>
            <p class="text-sm text-blue-700 dark:text-blue-200">
              Si tienes problemas con la instalación, únete a nuestro <a href="#" class="underline hover:text-blue-500 dark:hover:text-blue-300">Discord</a>.
            </p>
          </div>
        </div>
      </aside>

      <!-- Contenido principal -->
      <article class="flex-1 order-1 md:order-2 min-w-0">
        <div class="bg-white dark:bg-gray-800 shadow-md rounded-xl overflow-hidden border border-gray-200 dark:border-gray-700">
          <div class="p-6 lg:p-8">
            <header class="mb-8">
              <h1 id="inicio" class="text-3xl font-bold mb-4 text-gray-900 dark:text-gray-100">Instalación de EcoPets</h1>
              <p class="text-gray-600 dark:text-gray-400 text-lg">
                Guía completa para instalar el plugin EcoPets en tu servidor de Minecraft y comenzar a usar mascotas ecológicas.
              </p>
              
              <!-- Información de versión y actualización -->
              <div class="flex items-center gap-4 mt-4 text-sm">
                <span class="bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300 py-1 px-2 rounded-md flex items-center gap-1.5">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                  </svg>
                  Última versión: {configrapifa[0].latestversion}
                </span>
                <span class="text-gray-500 dark:text-gray-400 flex items-center gap-1.5">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  Actualizado: {configrapifa[1].updated}
                </span>
              </div>
            </header>
            
            <!-- Bloque de advertencia de requisitos -->
            <div  class="bg-yellow-50 dark:bg-yellow-900/20 border-l-4 border-yellow-400 dark:border-yellow-600 p-4 mb-8 rounded-r-md">
              <p id="requisitos" class="text-yellow-700 dark:text-yellow-300 flex items-center gap-2 font-medium">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
                Requisitos previos
              </p>
              <ul class="mt-2 ml-7 list-disc text-yellow-700 dark:text-yellow-200 space-y-1">
                <li>Java 17 o superior</li>
                <li>Spigot/Paper 1.18 o superior</li>
                <li>1GB RAM mínimo dedicado al servidor</li>
                <li>Permisos para instalar plugins</li>
              </ul>
            </div>
            
            <!-- Instalación rápida -->
            <section id="instalacion-rapida" class="mb-10">
              <h2 class="text-2xl font-semibold mb-4 text-gray-800 dark:text-gray-200 flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-yellow-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
                Instalación rápida
              </h2>
              <div class="bg-gray-900 p-4 rounded-lg border border-gray-200 dark:border-gray-700">
                <div class="bg-gray-800 text-gray-100 p-4 rounded-md overflow-x-auto">
                  <pre><code># Descargar el plugin
  Link de descarga

# Copiar a la carpeta de plugins
  EcoPets.jar /ruta/a/tu/servidor/plugins/

# Descargar Vault (dependencia requerida)
  https://github.com/MilkBowl/Vault/releases/latest/download/Vault.jar
  Vault.jar /ruta/a/tu/servidor/plugins/

# Reiniciar el servidor
  restart</code></pre>
  
                </div>
                <p class="text-xs text-gray-500 dark:text-gray-400 mt-2">Copia estos comandos para realizar una instalación rápida de EcoPets y sus dependencias.</p>
              </div>
            </section>
            
            <!-- Pasos básicos -->
            <section id="pasos-basicos" class="mb-10">
              <h2 class="text-2xl font-semibold mb-4 text-gray-800 dark:text-gray-200">Pasos básicos</h2>
              <p class="text-gray-600 dark:text-gray-400 mb-6">Sigue estos pasos para instalar EcoPets correctamente en tu servidor:</p>
              
              <div class="space-y-6">
                <div id="paso-1" class="border border-gray-900 dark:border-gray-700 rounded-lg overflow-hidden">
                  <div class="bg-gray-900 px-4 py-2 border-b border-gray-200 dark:border-gray-700">
                    <h3 class="font-medium text-gray-800 dark:text-gray-200">Paso 1: Descargar el plugin</h3>
                  </div>
                  <div class="p-4">
                    <p class="text-gray-600 dark:text-gray-400 mb-3">Descarga la última versión del plugin desde el sitio oficial:</p>
                    <div class="bg-gray-800 text-gray-100 p-4 rounded-md mt-2">
                      <code>Link de descarga</code>
                    </div>
                    <div class="mt-4 flex gap-3">
                      <a href="/" class="inline-flex items-center gap-1 text-sm bg-yellow-100 dark:bg-yellow-900/30 text-yellow-800 dark:text-yellow-300 py-1.5 px-3 rounded-md font-medium hover:bg-yellow-200 dark:hover:bg-yellow-800/40 transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                        </svg>
                        Descargar directamente
                      </a>
                      <a href="/" class="inline-flex items-center gap-1 text-sm text-gray-600 dark:text-gray-400 py-1.5 px-3 hover:text-yellow-600 dark:hover:text-yellow-400 transition-colors">
                        Ver versiones anteriores
                      </a>
                    </div>
                  </div>
                </div>
                
                <div id="paso-2" class="border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden">
                  <div class="bg-gray-900 px-4 py-2 border-b border-gray-200 dark:border-gray-700">
                    <h3 class="font-medium text-gray-800 dark:text-gray-200">Paso 2: Colocar en carpeta plugins</h3>
                  </div>
                  <div class="p-4">
                    <p class="text-gray-600 dark:text-gray-400 mb-3">Mueve el archivo JAR a la carpeta de plugins de tu servidor:</p>
                    <div class="bg-gray-800 text-gray-100 p-4 rounded-md mt-2">
                      <code>EcoPets.jar /ruta/a/tu/servidor/plugins/</code>
                    </div>
                    <div class="mt-4 bg-blue-50 dark:bg-blue-900/20 p-3 rounded-md text-sm text-blue-700 dark:text-blue-300">
                      <strong>Consejo:</strong> Asegúrate de que la carpeta "plugins" exista antes de mover el archivo.
                    </div>
                  </div>
                </div>
                
                <div id="paso-3" class="border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden">
                  <div class="bg-gray-900 px-4 py-2 border-b border-gray-200 dark:border-gray-700">
                    <h3 class="font-medium text-gray-800 dark:text-gray-200">Paso 3: Reiniciar el servidor</h3>
                  </div>
                  <div class="p-4">
                    <p class="text-gray-600 dark:text-gray-400 mb-3">Reinicia tu servidor para cargar el plugin:</p>
                    <div class="bg-gray-800 text-gray-100 p-4 rounded-md mt-2">
                      <code>restart</code>
                    </div>
                    <div class="mt-4 bg-yellow-50 dark:bg-yellow-900/20 p-3 rounded-md text-sm text-yellow-700 dark:text-yellow-300">
                      <strong>Nota:</strong> Dependiendo de tu panel de control, el comando puede variar. En algunos casos, deberás usar <code>stop</code> y luego iniciar el servidor manualmente.
                    </div>
                  </div>
                </div>
              </div>
            </section>
            
            <!-- Dependencias -->
            <section id="dependencias" class="mb-10">
              <h2 class="text-2xl font-semibold mb-4 text-gray-800 dark:text-gray-200">Dependencias requeridas</h2>
              <p class="text-gray-600 dark:text-gray-400 mb-6">EcoPets requiere las siguientes dependencias para funcionar correctamente:</p>
              
              <div id="vault" class="border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden mb-6">
                <div class="bg-gray-900 px-4 py-2 border-b border-gray-200 dark:border-gray-700">
                  <h3 class="font-medium text-gray-800 dark:text-gray-200">Vault (Obligatorio)</h3>
                </div>
                <div class="p-4">
                  <p class="text-gray-600 dark:text-gray-400 mb-3">Vault es necesario para las funciones de economía:</p>
                  <div class="bg-gray-800 text-gray-100 p-4 rounded-md mt-2">
                    <code>https://github.com/MilkBowl/Vault/releases/latest/download/Vault.jar</code>
                  </div>
                  <div class="mt-4 grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div class="border border-gray-200 dark:border-gray-700 rounded-md p-3">
                      <h4 class="font-medium text-gray-800 dark:text-gray-200 mb-1">Compatibilidad</h4>
                      <p class="text-sm text-gray-600 dark:text-gray-400">Compatible con cualquier plugin de economía que soporte Vault API</p>
                    </div>
                    <div class="border border-gray-200 dark:border-gray-700 rounded-md p-3">
                      <h4 class="font-medium text-gray-800 dark:text-gray-200 mb-1">Versión recomendada</h4>
                      <p class="text-sm text-gray-600 dark:text-gray-400">Vault 1.7.3 o superior</p>
                    </div>
                  </div>
                </div>
              </div>
              
              <div class="border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden">
                <div class="bg-gray-900 px-4 py-2 border-b border-gray-200 dark:border-gray-700">
                  <h3 class="font-medium text-gray-800 dark:text-gray-200">Dependencias opcionales</h3>
                </div>
                <div class="p-4">
                  <div class="space-y-4">
                    <div class="flex items-start gap-3">
                      <div class="flex-shrink-0 w-6 h-6 rounded-full bg-green-100 dark:bg-green-900/30 flex items-center justify-center mt-0.5">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-green-600 dark:text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                      </div>
                      <div>
                        <h4 class="font-medium text-gray-800 dark:text-gray-200">PlaceholderAPI</h4>
                        <p class="text-sm text-gray-600 dark:text-gray-400">Para utilizar placeholders de EcoPets en otros plugins</p>
                      </div>
                    </div>
                    <div class="flex items-start gap-3">
                      <div class="flex-shrink-0 w-6 h-6 rounded-full bg-green-100 dark:bg-green-900/30 flex items-center justify-center mt-0.5">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-green-600 dark:text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                      </div>
                      <div>
                        <h4 class="font-medium text-gray-800 dark:text-gray-200">ProtocolLib</h4>
                        <p class="text-sm text-gray-600 dark:text-gray-400">Para efectos visuales avanzados y efectos especiales de mascotas</p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </section>
            
            <!-- Configuración inicial -->
            <section id="configuracion-inicial" class="mb-10">
              <h2 class="text-2xl font-semibold mb-4 text-gray-800 dark:text-gray-200">Configuración inicial</h2>
              <p class="text-gray-600 dark:text-gray-400 mb-6">Al arrancar por primera vez, el plugin generará todos los archivos de configuración necesarios:</p>
              
              <div class="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-4 mb-6">
                <p class="text-blue-700 dark:text-blue-300 flex items-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  Después de reiniciar, se crearán automáticamente:
                </p>
                <ul class="mt-2 ml-7 list-disc text-blue-700 dark:text-blue-200 space-y-1">
                  <li>config.yml - Configuración principal</li>
                  <li>pets.yml - Definiciones de mascotas</li>
                  <li>messages.yml - Mensajes personalizables</li>
                  <li>data/ - Carpeta con datos de jugadores</li>
                </ul>
              </div>
              
              <div class="border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden">
                <div class="bg-gray-900 px-4 py-2 border-b border-gray-200 dark:border-gray-700">
                  <h3 class="font-medium text-gray-800 dark:text-gray-200">Primeros pasos de configuración</h3>
                </div>
                <div class="p-4">
                  <p class="text-gray-600 dark:text-gray-400 mb-3">Para configurar el plugin después de la instalación:</p>
                  <ol class="list-decimal ml-5 text-gray-600 dark:text-gray-400 space-y-2">
                    <li>Edita <code class="text-pink-600 dark:text-pink-400">config.yml</code> para ajustar las configuraciones generales</li>
                    <li>Ajusta los mensajes en <code class="text-pink-600 dark:text-pink-400">messages.yml</code> según tus preferencias</li>
                    <li>Personaliza las mascotas disponibles en <code class="text-pink-600 dark:text-pink-400">pets.yml</code></li>
                    <li>Reinicia el servidor para aplicar los cambios</li>
                  </ol>
                  <div class="mt-4">
                    <a href="/configuration" class="text-yellow-600 dark:text-yellow-400 hover:underline text-sm font-medium flex items-center gap-1">
                      Ver guía completa de configuración
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                      </svg>
                    </a>
                  </div>
                </div>
              </div>
            </section>
            
            <!-- Verificación de instalación -->
            <section id="verificacion" class="mb-10">
              <h2 class="text-2xl font-semibold mb-4 text-gray-800 dark:text-gray-200">Verificación de instalación</h2>
              <p class="text-gray-600 dark:text-gray-400 mb-6">Para verificar que EcoPets se ha instalado correctamente:</p>
              
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                <div class="border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden">
                  <div class="bg-gray-900 px-4 py-2 border-b border-gray-200 dark:border-gray-700">
                    <h3 class="font-medium text-gray-800 dark:text-gray-200">Verificar con comandos</h3>
                  </div>
                  <div class="p-4">
                    <p class="text-gray-600 dark:text-gray-400 mb-3">Ejecuta los siguientes comandos:</p>
                    <div class="bg-gray-800 text-gray-100 p-3 rounded-md mb-2">
                      <code>/ecopets version</code>
                    </div>
                    <div class="bg-gray-800 text-gray-100 p-3 rounded-md">
                      <code>/plugins</code>
                    </div>
                    <p class="text-sm text-gray-500 dark:text-gray-400 mt-2">Si ves EcoPets en la lista con su versión, la instalación es correcta.</p>
